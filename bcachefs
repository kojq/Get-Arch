#!/bin/bash
set -e

# Select disk
clear
echo WARNING: Back up data. The entire disk will be wiped.
PS3='Select disk: '
select disk in $(lsblk -do NAME -x SIZE | tac | head -n -2)
do [[ -n $disk ]] && break || echo Invalid selection. Try again.
done
[[ $disk =~ [0-9]$ ]] && separator=p

# Set credentials
clear
read -p 'Set username: ' username
read -sp 'Set password: ' password

# Synchronize system clock
timedatectl set-ntp true

# Create partitions
parted -s /dev/$disk mklabel gpt mkpart ESP fat32 1MiB 513MiB set 1 esp on mkpart ARCH 513MiB 100%

# Format partitions
mkfs.fat -F32 /dev/$disk$separator'1'
mkfs.bcachefs -f --compression=zstd --discard /dev/$disk$separator'2'
# bcachefs format -f --compression=zstd --discard /dev/$disk$separator'2'

# Mount root partition
mount -o noatime -t bcachefs /dev/$disk$separator'2' /mnt
# bcachefs mount -o noatime /dev/$disk$separator'2' /mnt

# Create subvolume
bcachefs subvolume create /mnt/@

# Mount ESP partition
mkdir /mnt/boot
mount -o umask=0077 /dev/$disk$separator'1' /mnt/boot

pacstrap -K /mnt amd-ucode aria2 base blueman booster bottom brightnessctl cliphist cups distrobox espeak-ng fastfetch fcitx5-anthy fcitx5-bamboo fcitx5-chewing fcitx5-chinese-addons fcitx5-configtool fcitx5-hangul fcitx5-kkc fcitx5-libthai fcitx5-m17n fcitx5-mozc fcitx5-pinyin-zhwiki fcitx5-rime fcitx5-sayura fcitx5-skk fcitx5-table-extra fcitx5-table-other fcitx5-unikey firefox firefox-ublock-origin foot fprintd fuzzel fwupd gitoxide gnome-disk-utility grim gvfs-afc gvfs-gphoto2 gvfs-mtp gvfs-nfs gvfs-smb helix hunspell hunspell-en_us hyphen hyphen-en hyprland intel-media-driver intel-ucode iptables-nft iwd lapce lib32-libva-intel-driver lib32-libva-mesa-driver lib32-mesa lib32-mesa-vdpau lib32-opencl-clover-mesa lib32-opencl-rusticl-mesa lib32-vulkan-intel lib32-vulkan-radeon libmythes libreoffice-fresh libva-intel-driver libva-mesa-driver linux linux-firmware linux-headers logrotate ly mako man-db man-pages mesa-vdpau mpv mythes-en nautilus nftables noto-fonts noto-fonts-cjk noto-fonts-emoji noto-fonts-extra ntfs-3g opencl-clover-mesa opencl-rusticl-mesa opendoas openresolv otf-font-awesome pipewire-alsa pipewire-jack pipewire-pulse podman rocm-opencl-runtime sbctl slurp speech-dispatcher swaybg swayimg swaylock ttf-jetbrains-mono typst vulkan-intel vulkan-radeon waybar wf-recorder wgcf wireguard-tools wireplumber xdg-desktop-portal-hyprland xdg-user-dirs zellij zram-generator

genfstab -U /mnt > /mnt/etc/fstab

arch-chroot /mnt <<EOF

ln -s /usr/share/zoneinfo/$(curl https://ipapi.co/timezone) /etc/localtime
hwclock -wu

sed -i 's/#\(en_US.UTF-8 UTF-8\)/\1/' /etc/locale.gen
locale-gen
echo LANG=en_US.UTF-8 > /etc/locale.conf

echo arch > /etc/hostname

sed -i -E 's/^#(Color|VerbosePkgLists)$/\1/' /etc/pacman.conf
sed -i 's/^#\(ParallelDownloads = \)5$/\1'$[`nproc`-1]'/' /etc/pacman.conf

echo '
export EDITOR=/usr/bin/helix' >> /etc/bash.bashrc

mkdir /etc/iwd
echo '[General]
EnableNetworkConfiguration=true' > /etc/iwd/main.conf

mkdir /etc/sudoers.d
echo $username 'ALL=(ALL:ALL) ALL' > /etc/sudoers.d/users
chmod -R 0400 /etc/sudoers.d

echo permit :wheel > /etc/doas.conf
chmod 0400 /etc/doas.conf

useradd -mG wheel,seat $username
echo $username:$password | chpasswd

mkdir -p /home/$username/.config/hypr
curl -o /home/$username/.config/hypr/hyprland.conf https://raw.githubusercontent.com/kojq/

chown -R $username:$username /home/$username/

yes | wgcf register
wgcf generate
cp wgcf-profile.conf /etc/wireguard
rm wgcf-account.toml wgcf-profile.conf

systemctl enable bluetooth cups.socket iwd ly nftables systemd-boot-update systemd-resolved systemd-timesyncd wg-quick@wgcf-profile

mkdir -p /boot/loader/entries
echo 'title Arch Linux
linux /vmlinuz-linux
initrd /amd-ucode.img
initrd /intel-ucode.img
initrd /booster-linux.img
options root=PARTLABEL=ARCH zswap.enabled=0 rootflags=subvol=@ rootfstype=bcachefs rw' > /boot/loader/entries/arch.conf

bootctl install

echo '[zram0]
zram-size = ram / 3
compression-algorithm = zstd' > /etc/systemd/zram-generator.conf

sbctl create-keys
sbctl enroll-keys -m
sbctl sign -s /efi/EFI/BOOT/BOOTX64.EFI
sbctl sign -s /efi/EFI/systemd/systemd-bootx64.efi
sbctl sign -s /efi/vmlinuz-linux

cat /sys/class/dmi/id/sys_vendor | grep -q ASUS && \
curl -o /etc/systemd/system/akb.service https://raw.githubusercontent.com/kojq/ASUS-Keyboard-Backlight/main/akb.service && \
systemctl enable akb

EOF

umount -R /mnt
reboot
