#!/usr/bin/env sh
cd ~

# play and record videos
yes | flatpak install flathub io.github.celluloid_player.Celluloid com.github.rafostar.Clapper com.obsproject.Studio

# applications
yes | flatpak install flathub io.gitlab.librewolf-community com.brave.Browser org.libreoffice.LibreOffice org.qbittorrent.qBittorrent dev.lapce.lapce

# games
# NOTE: cemu and desmume are not included as they have no and outdated Flatpaks, respectively
yes | flatpak install flathub com.usebottles.bottles com.valvesoftware.Steam org.ryujinx.Ryujinx org.yuzu_emu.yuzu org.citra_emu.citra org.DolphinEmu.dolphin-emu

# graphics
yes | flatpak install flathub org.blender.Blender org.gimp.GIMP org.inkscape.Inkscape

curl https://raw.githubusercontent.com/kojq/run/main/distributions/MicroOS | sh
