#!/usr/bin/env sh
cd ~

# browser
flatpak install flathub -y org.mozilla.firefox com.brave.Browser

# game
flatpak install flathub -y com.usebottles.bottles com.valvesoftware.Steam

# graphics
flatpak install flathub -y org.blender.Blender org.inkscape.Inkscape org.gimp.GIMP

# video
flatpak install flathub -y com.obsproject.Studio com.github.rafostar.Clapper io.github.celluloid_player.Celluloid

# text editing
flatpak install flathub -y dev.lapce.lapce org.libreoffice.LibreOffice

# emulation
# NOTE: Cemu Flatpak is under development
flatpak install flathub -y org.ryujinx.Ryujinx org.yuzu_emu.yuzu org.citra_emu.citra org.DolphinEmu.dolphin-emu net.kuribo64.melonDS org.desmume.DeSmuME

# other
flatpak install flathub -y org.geogebra.GeoGebra org.qbittorrent.qBittorrent com.mattjakeman.ExtensionManager

# org.cvfosammmm.Setzer org.texstudio.TeXstudio org.tug.texworks
# io.github.jliljebl.Flowblade org.shotcut.Shotcut org.openshot.OpenShot org.kde.kdenlive
# org.kde.kolourpaint org.kde.kdiff3 org.kde.krita

clear
PS3="Enter a number: "
select distro in Arch MicroOS
do
    echo "$distro was chosen."
    sh <(curl https://raw.githubusercontent.com/kojq/run/main/distributions/$distro)
    break
done
